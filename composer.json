{
    "name": "entreprise-platform/web-app",
    "description": "Plateforme de données d'entreprises françaises",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "backend/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"copy('.env.example', '.env');\"",
            "@php -r \"mkdir('storage', 0755, true);\"",
            "@php -r \"mkdir('storage/logs', 0755, true);\"",
            "@php -r \"mkdir('storage/cache', 0755, true);\"",
            "@php -r \"mkdir('storage/documents', 0755, true);\""
        ]
    }
}
